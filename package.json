{
  "name": "dash_finance",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=@repo/api",
    "dev:web": "turbo run dev --filter=web",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:rebuild": "docker-compose up -d --build",
    "db:generate": "cd apps/api && bun run db:generate",
    "db:push": "cd apps/api && bun run db:push",
    "db:migrate": "cd apps/api && bun run db:migrate",
    "db:studio": "cd apps/api && bun run db:studio"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "commitizen": "^4.3.1",
    "cz-customizable": "^7.5.1",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "prettier": "^3.7.4",
    "turbo": "^2.7.2",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
